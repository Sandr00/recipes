{
    "name": "recipes",
    "author": "Sandro Bauer (https://github.com/Sandr0x00)",
    "description": "A small recipe collection.",
    "license": "MIT",
    "private": true,
    "repository": "github:Sandr0x00/recipes",
    "scripts": {
        "build:css": "node-sass sass -o public/css --output-style compressed",
        "build:js": "rollup -c",
        "resize": "node resize.js",
        "build": "npm run build:css && npm run build:js && ./copy.py && npm run resize",
        "test": "eslint . && mocha",
        "dist": "npm run test && ./make_dist.py",
        "start": "node server.js",
        "kill": "kill `cat pid`",
        "nohup": "(nohup node server.js 2>&1 &) && echo $! > pid"
    },
    "dependencies": {
        "compression": "^1.7.4",
        "express": "^4.17.1"
    },
    "devDependencies": {
        "@fortawesome/fontawesome-svg-core": "^1.2.25",
        "@fortawesome/free-brands-svg-icons": "^5.11.2",
        "@fortawesome/free-regular-svg-icons": "^5.11.2",
        "@fortawesome/free-solid-svg-icons": "^5.11.2",
        "@webcomponents/webcomponentsjs": "^2.3.0",
        "acorn": "^7.1.0",
        "bootstrap": "^4.3.1",
        "chai": "^4.2.0",
        "eslint": "^6.5.1",
        "jquery": "^3.4.1",
        "jsonschema": "^1.2.4",
        "lit-element": "^2.2.1",
        "lit-html": "^1.1.2",
        "mocha": "^6.2.1",
        "navigo": "^7.1.2",
        "node-sass": "^4.12.0",
        "popper.js": "^1.15.0",
        "rollup": "^1.22.0",
        "rollup-plugin-commonjs": "^10.1.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-terser": "^5.1.2",
        "sharp": "^0.23.1"
    },
    "bugs": {
        "url": "https://github.com/Sandr0x00/recipes/issues"
    }
}
