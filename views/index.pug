extends layout.pug

block content
  div.row
    div.col-1.offset-11
      a.float-right(href='/reload-json')
        i.fas.fa-sync-alt(style='font-size:3em; color:#333;')

  h1 Mains
  div.row
    each recipe in mains
      div.col-md-4
        a(href='/mains/' + recipe.id)
          h2.text-center= recipe.name
          if recipe.image
            img(src="/images/" + recipe.image[0]).w-100


  h1 Deserts
  div.row
    each recipe in deserts
      div.col-md-4
        a(href='/desert/' + recipe.id)
          h2.text-center= recipe.name
          if recipe.image
            img(src="/images/" + recipe.image[0]).w-100

