{
    "name": "Gedeckter Apfelkuchen",
    "tags": [
        "sweet",
        "fruity",
        "oven"
    ],
    "ingredients": {
        "mehl": {
            "amount": "300g"
        },
        "zucker": {
            "amount": "250g"
        },
        "butter": {
            "amount": "150g"
        },
        "ei": {
            "amount": "1"
        },
        "salz": {},
        "apfel": {
            "amount": "750g"
        },
        "zimt": {
            "amount": "1 TL"
        },
        "haselnuss": {
            "amount": "50g"
        },
        "zitronensaft": {}
    },
    "preparation": [
        "{mehl} mit {zucker:150g}, {butter}, {ei} und {salz} verkneten.",
        "2/3 des Teiges dünn ausrollen, Boden und Rand einer Springform auslegen. Den Teig einstechen.",
        "Geschälte {apfel} und mit {zucker:100g}, {haselnuss}, {zimt}, {zitronensaft} und Wasser dünsten, bis Äpfel weich sind.",
        "Auf den Boden geben und mit dem restlichen Teig zudecken.",
        "Den Kuchen 30 Minuten bei 200°C backen."
    ]
}