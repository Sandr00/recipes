{
    "name": "recipes",
    "author": "Sandro Bauer (https://github.com/Sandr0x00)",
    "description": "A small recipe collection.",
    "license": "MIT",
    "private": true,
    "repository": "github:Sandr0x00/recipes",
    "scripts": {
        "compile:scss": "node-sass sass -o public/css",
        "build:dev": "npm run compile:scss && ./copy.py && npm run resize && npm run test",
        "build:prod": "npm run build:dev && tar -czf recipes.tar.gz public recipes views package.json package-lock.json helper.js server.js LICENSE",
        "resize": "node resize.js",
        "test": "eslint . && mocha",
        "serve": "./server.js",
        "deploy:copy": "scp recipes.tar.gz recipes.service pi@raspberrypi.fritz.box:~",
        "deploy:install": "ssh pi@raspberrypi.fritz.box 'bash -s' < deploy.sh",
        "deploy:update": "ssh pi@raspberrypi.fritz.box \"tar -zxvf recipes.tar.gz -C ~/recipes && sudo systemctl restart recipes.service\""
    },
    "dependencies": {
        "compression": "^1.7.3",
        "express": "^4.16.4",
        "jsonschema": "^1.2.4",
        "pug": "^2.0.3",
        "bootstrap": "^4.3.1",
        "chai": "^4.2.0",
        "eslint": "^5.15.1",
        "jquery": "^3.3.1",
        "jquery-lazy": "^1.7.10",
        "mocha": "^6.0.0",
        "node-sass": "^4.11.0",
        "popper.js": "^1.14.7",
        "sharp": "^0.21.3"
    },
    "bugs": {
        "url": "https://github.com/Sandr0x00/recipes/issues"
    }
}
